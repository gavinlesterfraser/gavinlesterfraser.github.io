---
import BaseLayout from './BaseLayout.astro';
import '../styles/posts.css';
const { frontmatter } = Astro.props;
const pubDate = frontmatter.pubDate ? new Date(frontmatter.pubDate) : new Date();
const team = frontmatter.team || '';
const tags = frontmatter.tags || [];
---

<BaseLayout pageTitle={frontmatter.title}>
	<h4 class="post-title">{frontmatter.title}</h4>
	<slot />
	<div class="credits">
		<div>
			<span>Completed in</span><br />
			<span>{frontmatter.pubDate.toString().slice(0,10)}</span>
		</div>
		<div>
			<span>The team was</span><br />
			<span>{frontmatter.team}</span>
		</div>
		<div class="tags">
			{frontmatter.tags.map((tag: string) => (
				<p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
			))}
		</div>
	</div>
</BaseLayout>

