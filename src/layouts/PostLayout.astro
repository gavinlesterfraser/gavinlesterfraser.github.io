---
import BaseLayout from './BaseLayout.astro';
const { pageTitle } = Astro.props;
const { frontmatter } = Astro.props;
---

<style>
    body, img {
    font-size: 1.25vw !important;
	font-weight: 400;
	margin: 0;
    padding: 8.09vw 1vw 38px 34.5vw;
	margin: 0 0 38px 0;
	max-width: 65.5vw;
	text-align: left;
	text-decoration: none;
	font-weight: 400;
	color: #000000;
	display: block;
	z-index: 50;
    }
	h2 {
	font-size: 1.25vw !important;
	font-weight: 400;
	margin: 0;
	margin: 0 0 38px 0;
	text-align: left;
	text-decoration: none;
	font-weight: 400;
	color: #000000;
	z-index: 50;
	}
	img {
	height: auto;
	max-height: 100vh;
	width: auto;
	max-width: 92vw;
	text-align: center;
	display: block;
	float: left;
	---margin-left: auto;
	---margin-right: auto;
	padding: 0 2vw 5vw 0;
	}
body {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	z-index: -100;
	top: 0;
	position: relative;
	---width: 100%;
	---text-decoration: none;
	text-align: left;
}


</style>

<BaseLayout pageTitle={frontmatter.title}>
	<h2>{frontmatter.title}</p>
    <slot />
	<p>Completed: {frontmatter.pubDate.toString().slice(0,10)}</p>
	<p>Project Team: {frontmatter.team}</p>
	<div class="tags">
    {frontmatter.tags.map((tag: string) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
	</div>
</BaseLayout>